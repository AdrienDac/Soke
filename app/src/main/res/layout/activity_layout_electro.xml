<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_electro">

    <ScrollView
        android:id="@+id/menu_vert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_Activity2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Elektrik Park"
                app:srcCompat="@drawable/logo_epk2021"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 2"
                app:srcCompat="@drawable/logo_tomorrow"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 5" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 6" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 7" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 8" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 9" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 10" />

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>