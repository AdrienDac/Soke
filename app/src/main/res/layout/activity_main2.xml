<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/text_Activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act_2"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:background="@color/purple_500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/menu_vert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_Activity2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 1" />

            <Button
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 5" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 6" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 7" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 8" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 9" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Numero 10" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>