<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password"
    android:background="#18E2EC">

    <TextView
        android:id="@+id/textView"
        android:layout_width="297dp"
        android:layout_height="141dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="REINITIALISER SON MOT DE PASSE"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <EditText
        android:id="@+id/editemail"
        android:layout_width="320dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetmdp_button"
        android:layout_width="319dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="REINITIALISER"
        android:fontFamily="@font/press_start_2p"
        android:backgroundTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editemail" />

    <ProgressBar
        android:id="@+id/progressbar_rst"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrez l'adresse mail du compte associÃ©"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/editemail"
        app:layout_constraintStart_toStartOf="@+id/editemail" />

</androidx.constraintlayout.widget.ConstraintLayout>