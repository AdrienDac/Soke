<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_music_style">

    <VideoView
        android:id="@+id/select_stylevid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="365dp"
        android:layout_height="126dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/roboto_black"
        android:text="@string/select_style"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        android:background="@null">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/ImageReggae"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/ImageElectro"
                app:layout_constraintEnd_toStartOf="@+id/ImageFunk"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ImageFunk"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@id/ImageRock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ImageReggae"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ImageElectro"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/ImageButton5"
                app:layout_constraintEnd_toStartOf="@id/ImageRock"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ImageReggae" />

            <ImageButton
                android:id="@+id/ImageRock"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@id/ImageButton6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ImageElectro"
                app:layout_constraintStart_toEndOf="@id/ImageElectro"
                app:layout_constraintTop_toBottomOf="@id/ImageFunk" />

            <ImageButton
                android:id="@+id/ImageButton5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@id/ImageButton7"
                app:layout_constraintEnd_toStartOf="@id/ImageButton6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ImageElectro" />

            <ImageButton
                android:id="@+id/ImageButton6"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@id/ImageButton8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ImageButton5"
                app:layout_constraintTop_toBottomOf="@id/ImageRock" />

            <ImageButton
                android:id="@+id/ImageButton7"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toStartOf="@id/ImageButton8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ImageButton5" />

            <ImageButton
                android:id="@+id/ImageButton8"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ImageButton7"
                app:layout_constraintTop_toBottomOf="@id/ImageButton6" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/roboto_black"
                android:text="@string/REGGAE"
                android:textColor="@color/white"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/ImageReggae"
                app:layout_constraintEnd_toEndOf="@+id/ImageReggae"
                app:layout_constraintStart_toStartOf="@+id/ImageReggae"
                app:layout_constraintTop_toTopOf="@+id/ImageReggae" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/roboto_black"
                android:text="@string/FUNK"
                android:textColor="@color/white"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/ImageFunk"
                app:layout_constraintEnd_toEndOf="@+id/ImageFunk"
                app:layout_constraintStart_toStartOf="@+id/ImageFunk"
                app:layout_constraintTop_toTopOf="@+id/ImageFunk" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/roboto_black"
                android:text="@string/ROCK"
                android:textColor="@color/white"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/ImageRock"
                app:layout_constraintEnd_toEndOf="@+id/ImageRock"
                app:layout_constraintStart_toStartOf="@+id/ImageRock"
                app:layout_constraintTop_toTopOf="@+id/ImageRock" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="@string/ELECTRO"
                android:textColor="@color/white"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/ImageElectro"
                app:layout_constraintEnd_toEndOf="@+id/ImageElectro"
                app:layout_constraintStart_toStartOf="@+id/ImageElectro"
                app:layout_constraintTop_toTopOf="@+id/ImageElectro" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>